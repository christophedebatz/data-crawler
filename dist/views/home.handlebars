{{> header}}

<div id="page-content-wrapper">
  <div class="container-fluid">
    <h1>DataCrawler v1</h1>
    <hr>

    {{#if err}}
      <h2>Something wrong happened</h2>
      {{err}}
    {{/if}}

    <h2>Input files list</h2>
    <span>In <i>{{inputDir}}</i></span>
    <ul>
      {{#each inputs}}
        <li>{{this}}</li>
      {{/each}}
    </ul>

    <h2>Crawlers list</h2>
    <span>In <i>{{crawlerDir}}</i></span>
    <ul>
      {{#each crawlers}}
        <li><a href="/crawler-{{slug}}">{{name}}</a></li>
      {{/each}}
    </ul>

    <p style="padding-top: 50px; color: lightgray;">
      You need to restart the app each time you add a new crawler. No need to restart when just adding an input file.
    </p>
  </div>
</div>

{{> footer}}
